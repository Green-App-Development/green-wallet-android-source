<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyLightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/primary_app_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="colorAccent">@color/green</item>
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>
        <!--        <item name="colorControlHighlight">@color/blue_secondary</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_state_colors</item>
        <item name="android:textColor">@color/btn_text_state_colors</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogAnimationFromBottom">
        <item name="android:windowEnterAnimation">@anim/slid_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DialogAnimationFromRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_left</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/switch_thumb_on</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/switch_thumb_off</item>

    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>

    </style>


    <style name="CheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#272525</item>
        <item name="buttonTint">@color/green</item>
        <item name="colorControlActivated">#000</item>
        <item name="android:textColor">#FFFF3F3C</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_btm_sheet_dialog</item>
        <item name="android:windowEnterAnimation">@anim/slid_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CustomTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">@bool/light_status_bar</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>


</resources>