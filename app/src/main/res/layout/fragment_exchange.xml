<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btnExchange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="460dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/card_view_bcg_shape"
                android:paddingTop="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txtFixedCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="@string/fixed_rate"
                    android:textColor="@color/setting_text_color"
                    android:textFontWeight="550"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ic_question"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_question_mark"
                    app:layout_constraintBottom_toBottomOf="@+id/txtFixedCourse"
                    app:layout_constraintStart_toEndOf="@+id/txtFixedCourse"
                    app:layout_constraintTop_toTopOf="@+id/txtFixedCourse" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_exchange_from"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/bcg_edt_course_exchange"
                    app:layout_constraintTop_toBottomOf="@+id/txtFixedCourse">

                    <TextView
                        android:id="@+id/txtYouSending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/you_send"
                        android:textColor="@color/grey_txt_color"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edtAmountFrom"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/view8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtYouSending" />

                    <View
                        android:id="@+id/green_line_edt"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/green"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@id/guideline61"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edtAmountFrom" />

                    <TextView
                        android:id="@+id/edtFromNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:text="TRC-20"
                        android:textColor="@color/grey_txt_color"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="@+id/guideline61"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/edtTokenFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="5dp"
                        android:text="XCH"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/guideline61"
                        app:layout_constraintTop_toBottomOf="@+id/edtFromNetwork" />


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentBottom="true"
                        app:layout_constraintEnd_toEndOf="@+id/edtTokenFrom"
                        app:layout_constraintStart_toStartOf="@+id/edtTokenFrom"
                        app:layout_constraintTop_toBottomOf="@+id/edtTokenFrom">

                        <com.green.wallet.presentation.custom.CustomSpinner
                            android:id="@+id/tokenFromSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/selector_spinner_bcg_color" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imgArrowFrom"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_arrow_downword"
                        app:layout_constraintBottom_toBottomOf="@+id/edtTokenFrom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/edtTokenFrom" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/line_divider"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline61"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline61"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.65" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txtCoursePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="14dp"
                    android:text=""
                    android:textColor="@color/setting_text_color"
                    android:textFontWeight="550"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_exchange_from" />

                <ImageView
                    android:id="@+id/img_swap"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:rotation="90"
                    android:src="@drawable/ic_swap_large"
                    app:layout_constraintBottom_toBottomOf="@+id/txtCoursePrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtCoursePrice" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_comment_limit_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="-5dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_exchange_from">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_polygon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/bcg_rounded_corner_comment"
                        android:paddingStart="8dp"
                        android:paddingTop="7dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/txtMinSumRequired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:gravity="center_horizontal"
                            android:text="Минимальная сумма: 36.70 USDT TRC-20"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_exchange_to"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/bcg_edt_course_exchange"
                    app:layout_constraintTop_toBottomOf="@+id/txtCoursePrice">

                    <TextView
                        android:id="@+id/txtYouReceiving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/you_receive"
                        android:textColor="@color/grey_txt_color"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/edtAmountTo"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/guideline62"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtYouReceiving" />


                    <TextView
                        android:id="@+id/edtToNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:text="Chia Network"
                        android:textColor="@color/grey_txt_color"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="@+id/guideline62"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/edtTokenTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="5dp"
                        android:text="USDT"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/guideline62"
                        app:layout_constraintTop_toBottomOf="@+id/edtToNetwork" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_alignParentBottom="true"
                        app:layout_constraintEnd_toEndOf="@+id/edtTokenTo"
                        app:layout_constraintStart_toStartOf="@+id/edtTokenTo"
                        app:layout_constraintTop_toBottomOf="@+id/edtTokenTo">

                        <com.green.wallet.presentation.custom.CustomSpinner
                            android:id="@+id/tokenToSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/selector_spinner_bcg_color" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imgArrowTo"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_arrow_downword"
                        app:layout_constraintBottom_toBottomOf="@+id/edtTokenTo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/edtTokenTo" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/line_divider"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline62"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.65" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_get_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="layout_exchange_to,layout_get_address_usdt,layout_get_address_xch">


                </androidx.constraintlayout.widget.Barrier>


                <View
                    android:id="@+id/view_divider_get_address"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="7dp"
                    android:background="@color/track_color"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/layout_exchange_to" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_get_address_usdt"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/bcg_edt_course_exchange"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/view_divider_get_address">

                    <TextView
                        android:id="@+id/txtReceiveAddressUSDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text="Адрес для получения (TRC-20)"
                        android:textColor="@color/second_grey"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edtGetAddressUSDT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789,."
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/secondary_text_color"
                        android:textColorHint="@color/inactive_grey_txt"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtReceiveAddressUSDT" />

                    <View
                        android:id="@+id/line_green_edt_usdt"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/green"
                        android:visibility="invisible"
                        app:layout_constraintTop_toBottomOf="@id/edtGetAddressUSDT" />

                    <ImageView
                        android:id="@+id/img_ic_scan_usdt"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/edt_scan"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtReceiveAddressUSDT" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_get_address_xch"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/bcg_edt_course_exchange"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/view_divider_get_address">


                    <TextView
                        android:id="@+id/txtReceiveAddressXCH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text="Адрес для получения XCH"
                        android:textColor="@color/green"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/edtGetAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:maxLines="1"
                        android:text="xch1janzfp...s6кpd2s"
                        android:textColor="@color/grey_txt_color"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@id/guideline63"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtReceiveAddressXCH" />

                    <View
                        android:id="@+id/view11"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/line_divider"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline63"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.65" />

                    <TextView
                        android:id="@+id/edtFingerPrint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="10dp"
                        android:text="******5630"
                        android:textColor="@color/grey_txt_color"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="@+id/guideline63"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:layout_width="170dp"
                        android:layout_height="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        app:layout_constraintEnd_toEndOf="@+id/imgArrowChia"
                        app:layout_constraintTop_toBottomOf="@id/edtNetwork">

                        <com.green.wallet.presentation.custom.CustomSpinner
                            android:id="@+id/wallet_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/selector_spinner_bcg_color"
                            android:dropDownVerticalOffset="5dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/edtNetwork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="5dp"
                        android:text="Chia"
                        android:textColor="@color/secondary_text_color"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="@+id/guideline63"
                        app:layout_constraintTop_toBottomOf="@+id/edtFingerPrint" />

                    <ImageView
                        android:id="@+id/imgArrowChia"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_arrow_downword"
                        app:layout_constraintBottom_toBottomOf="@+id/edtNetwork"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/edtNetwork" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/txtDetailTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="@string/trans_details"
                    android:textColor="@color/setting_text_color"
                    android:textFontWeight="550"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/barrier_get_address" />

                <ImageView
                    android:id="@+id/imgArrowDownDetailTrans"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_arrow_downword"
                    app:layout_constraintBottom_toBottomOf="@+id/txtDetailTransactions"
                    app:layout_constraintStart_toEndOf="@+id/txtDetailTransactions"
                    app:layout_constraintTop_toTopOf="@+id/txtDetailTransactions" />

                <RelativeLayout
                    android:id="@+id/layoutUpdateCourse"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDetailTransactions">

                    <TextView
                        android:id="@+id/txtUpdateCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:text="@string/rate_update"
                        android:textColor="@color/setting_text_color"
                        android:textFontWeight="550"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/edtUpdateCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:text="@string/timing"
                        android:textColor="@color/setting_text_color"
                        android:textFontWeight="550"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignBottom="@+id/txtUpdateCourse"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_divider" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutCommissionExchange"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutUpdateCourse">

                    <TextView
                        android:id="@+id/txtCommissionExchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:text="@string/exchan_commission_fee"
                        android:textColor="@color/setting_text_color"
                        android:textFontWeight="550"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/edtCommissionExchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:text=""
                        android:textColor="@color/setting_text_color"
                        android:textFontWeight="550"
