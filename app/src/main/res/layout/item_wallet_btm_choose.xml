<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="60dp">

	<ImageView
			android:id="@+id/ic_chia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="10dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:src="@drawable/ic_chia"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

	<TextView
			android:id="@+id/txtChia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginStart="10dp"
			android:text="Chia"
			android:textColor="@color/secondary_text_color"
			android:textFontWeight="600"
			android:textSize="20sp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/ic_chia"
			app:layout_constraintTop_toTopOf="parent" />

	<TextView
			android:id="@+id/txtPublicKey"
			android:layout_width="0dp"
			android:layout_height="40dp"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="10dp"
			android:autoSizeMinTextSize="5sp"
			android:autoSizeTextType="uniform"
			android:text="Приватный ключ с публичным отпечатком 8745635630"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="@+id/guideLine67"
			app:layout_constraintTop_toTopOf="parent" />

	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideLine67"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.35" />

	<View
			android:id="@+id/view_divider"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:background="@color/network_item_line_divider"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
