<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootNotifItem"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/notif_bcg"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">


    <RelativeLayout
        android:id="@+id/rel_notif_trans_detail"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_chia" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/img_coin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notif_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зачисление на кошелек Chia"
                android:textColor="@color/greey"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+100.8468424864 XCH"
                android:textColor="@color/green"
                android:textFontWeight="500"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtAmountInUsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⁓ 7503.16 USD"
                android:textColor="@color/greey"
                android:textFontWeight="500"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_other_notifs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/txtTime"
        android:text="Тестовое сообщение #2\r\nВ две строки! :)"
        android:textColor="@color/txt_trans_property"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="15dp"
        android:text="19:11"
        android:textFontWeight="500"
        android:textSize="12sp" />


</RelativeLayout>