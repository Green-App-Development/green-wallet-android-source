<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_app_background">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passcode_confirmation_title"
        android:textColor="@color/green"
        android:textFontWeight="600"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline13" />

    <TextView
        android:id="@+id/txtWrongPassCodeEntered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:gravity="center_horizontal"
        android:text="@string/passcode_entry_screen_error"
        android:textColor="#FF2222"
        android:textFontWeight="500"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circles" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />


    <com.example.common.custom.Circles
        android:id="@+id/circles"
        android:layout_width="200dp"
        android:layout_height="18dp"
        app:circleEdgeColor="@color/circle_edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline16"
        app:usedCircleColor="@color/green"
        app:usedCircleCount="0"
        app:wrongCircleColor="@color/red_mnemonic" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <GridLayout
        android:id="@+id/btnsGridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toTopOf="@+id/guideline18"
        app:layout_constraintEnd_toStartOf="@+id/guideline22"
        app:layout_constraintStart_toStartOf="@+id/guideline21"
        app:layout_constraintTop_toTopOf="@id/guideline17">

        <Button
            android:id="@+id/btn1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="1 clicked"
            android:text="1"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="2 clicked"
            android:text="2"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="3"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="4"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="6"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="7"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="8"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <Button
            android:id="@+id/btn9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="9"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <RelativeLayout
            android:id="@+id/relFaceId"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="rel_face_id">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_face_id" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:textColor="@color/secondary_text_color"
            android:textSize="32sp" />

        <RelativeLayout
            android:id="@+id/btnBackSpace"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:tag="rel_img_back_space">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_backspace" />
        </RelativeLayout>

    </GridLayout>


    <TextView
        android:id="@+id/txtClearCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/passcode_entry_screen_reset"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnsGridLayout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

</androidx.constraintlayout.widget.ConstraintLayout>