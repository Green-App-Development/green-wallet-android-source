<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/send_fragment_bcg_color"
		android:fitsSystemWindows="true">

	<LinearLayout
			android:id="@+id/back_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintStart_toStartOf="@+id/guideline11"
			app:layout_constraintTop_toTopOf="@+id/guideline8">

		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:src="@drawable/back_arrow_ic" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:text="@string/back_btn"
				android:textColor="@color/greey"
				android:textFontWeight="500"
				android:textSize="18sp" />

	</LinearLayout>


	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline11"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.03" />

	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline8"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.03" />

	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline10"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			app:layout_constraintGuide_percent="0.98" />

	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline9"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			app:layout_constraintGuide_percent="0.97" />

	<RelativeLayout
			android:id="@+id/chosenNetworkRel"
			android:layout_width="170dp"
			android:layout_height="40dp"
			android:background="@drawable/drop_down_network_chooser_bcg"
			app:layout_constraintEnd_toStartOf="@+id/guideline9"
			app:layout_constraintTop_toTopOf="@+id/guideline8">

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:orientation="horizontal">

			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:src="@drawable/dot_ic" />

			<TextView
					android:id="@+id/txt_chosen_network"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="5dp"
					android:layout_marginEnd="5dp"
					android:text="Chia Network"
					android:textColor="@color/green"
					android:textFontWeight="400"
					android:textSize="14sp" />

			<ImageView
					android:id="@+id/imgIconSpinner"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:layout_gravity="center_vertical"
					android:foreground="?android:attr/selectableItemBackground"
					android:src="@drawable/ic_arrow_downword" />

		</LinearLayout>

	</RelativeLayout>

	<RelativeLayout
			android:layout_width="200dp"
			android:layout_height="0dp"
			app:layout_constraintEnd_toStartOf="@+id/guideline9"
			app:layout_constraintTop_toBottomOf="@+id/chosenNetworkRel">

		<com.android.greenapp.presentation.custom.CustomSpinner
				android:id="@+id/network_spinner"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:background="@drawable/selector_spinner_bcg_color" />

	</RelativeLayout>


	<RelativeLayout
			android:id="@+id/relativeLayout"
			android:layout_width="0dp"
			android:layout_height="62dp"
			android:orientation="horizontal"
			app:layout_constraintEnd_toStartOf="@+id/guideline9"
			app:layout_constraintStart_toStartOf="@+id/guideline11"
			app:layout_constraintTop_toTopOf="@+id/guideline49">


		<ImageView
				android:id="@+id/imgCoin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_gravity="center_vertical"
				android:src="@drawable/ic_chia_white" />

		<LinearLayout
				android:id="@+id/linearWallet"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginStart="5dp"
				android:layout_toEndOf="@id/imgCoin"
				android:orientation="vertical">

			<TextView
					android:id="@+id/txtHiddenPublicKey"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:text="******5630"
					android:textColor="@color/greey"
					android:textSize="12sp" />


			<TextView
					android:id="@+id/txt_network_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:text="Chia"
					android:textColor="@color/secondary_text_color"
					android:textFontWeight="600"
					android:textSize="18sp" />


		</LinearLayout>

		<RelativeLayout
				android:layout_width="170dp"
				android:layout_height="0dp"
				android:layout_alignParentBottom="true"
				android:layout_marginStart="20dp">

			<com.android.greenapp.presentation.custom.CustomSpinner
					android:id="@+id/wallet_spinner"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:background="@drawable/selector_spinner_bcg_color"
					android:dropDownVerticalOffset="5dp" />

		</RelativeLayout>

		<ImageView
				android:id="@+id/ic_wallet_list"
				android:layout_width="23dp"
				android:layout_height="18dp"
				android:layout_centerVertical="true"
				android:layout_marginStart="3dp"
				android:layout_marginEnd="10dp"
				android:layout_toEndOf="@id/linearWallet"
				android:foreground="?android:attr/selectableItemBackground"
				android:src="@drawable/ic_arrow_downword" />


		<ImageView
				android:id="@+id/ic_token_downward"
				android:layout_width="23dp"
				android:layout_height="18dp"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_marginEnd="10dp"
				android:foreground="?android:attr/selectableItemBackground"
				android:src="@drawable/ic_arrow_downword" />

		<TextView
				android:id="@+id/txtWalletAmount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="41dp"
				android:text="8.5478614578 XCH"
				android:textColor="@color/secondary_text_color"
				android:textFontWeight="400"
				android:textSize="16sp" />


		<TextView
				android:id="@+id/txtWalletAmountInUsd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/txtWalletAmount"
				android:layout_alignParentEnd="true"
				android:layout_marginTop="0dp"
				android:layout_marginEnd="41dp"
				android:text="⁓ 550 USD"
				android:textSize="14sp" />

		<RelativeLayout
				android:layout_width="200dp"
				android:layout_height="0dp"
				android:layout_alignParentEnd="true"
				android:layout_alignParentBottom="true">

			<com.android.greenapp.presentation.custom.CustomSpinner
					android:id="@+id/token_spinner"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:background="@drawable/selector_spinner_bcg_color"
					android:dropDownVerticalOffset="5dp" />

		</RelativeLayout>


	</RelativeLayout>


	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginBottom="10dp"
			app:layout_constraintBottom_toTopOf="@+id/btnContinue"
			app:layout_constraintEnd_toStartOf="@+id/guideline9"
			app:layout_constraintStart_toStartOf="@+id/guideline11"
			app:layout_constraintTop_toTopOf="@+id/guideline51">

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:id="@+id/send_views_constraint"
					android:layout_height="wrap_content"
					android:layout_marginTop="30dp">

				<View
						android:id="@+id/dummy_view1"
						android:layout_width="0dp"
						android:layout_height="10dp"
						android:background="@android:color/transparent"
						app:layout_constraintEnd_toEndOf="@+id/guideline16"
						app:layout_constraintStart_toStartOf="@+id/guideline15"
						app:layout_constraintTop_toTopOf="parent" />

				<androidx.cardview.widget.CardView
						android:id="@+id/cardView"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						app:cardCornerRadius="20dp"
						app:cardElevation="3dp"
						app:layout_constraintEnd_toStartOf="@+id/guideline16"
						app:layout_constraintStart_toStartOf="@id/guideline15"
						app:layout_constraintTop_toBottomOf="@id/dummy_view1">

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:background="@color/send_fragment_card_view_bcg"
							android:orientation="vertical"
							android:paddingStart="15dp"
							android:paddingTop="20dp"
							android:paddingEnd="15dp"
							android:paddingBottom="20dp">

						<TextView
								android:id="@+id/txtEnterAddressWallet"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/send_token_adress"
								android:textColor="@color/green"
								android:textFontWeight="400"
								android:textSize="15sp"
								android:visibility="invisible" />


						<RelativeLayout
								android:id="@+id/edtRelative"
								android:layout_width="match_parent"
								android:layout_height="wrap_content">

							<EditText
									android:id="@+id/edtAddressWallet"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="3dp"
									android:layout_toLeftOf="@+id/img_edt_scan"
									android:background="@android:color/transparent"
									android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ 0123456789,."
									android:hint="@string/send_token_adress"
									android:imeOptions="actionDone"
									android:maxLines="1"
									android:singleLine="true"
									android:text=""
									android:textColor="@color/secondary_text_color"
									android:textColorHint="@color/inactive_grey_txt"
									android:textSize="16sp" />

							<ImageView
									android:id="@+id/img_address_ic"
									android:layout_width="25dp"
									android:layout_height="25dp"
									android:layout_alignParentEnd="true"
									android:layout_centerVertical="true"
									android:src="@drawable/edt_paste" />

							<ImageView
									android:id="@+id/img_edt_scan"
									android:layout_width="25dp"
									android:layout_height="25dp"
									android:layout_centerVertical="true"
									android:layout_marginEnd="3dp"
									android:layout_toStartOf="@id/img_address_ic"
									android:src="@drawable/edt_scan" />


						</RelativeLayout>


						<View
								android:id="@+id/line2"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:layout_marginTop="3dp"
								android:background="@color/edt_divider" />


						<androidx.appcompat.widget.LinearLayoutCompat
								android:id="@+id/addNameAddressLay"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="15dp"
								android:orientation="vertical"
								android:visibility="gone">

							<TextView
									android:id="@+id/txtAddressName"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/send_token_name_of_adres"
									android:textColor="@color/green"
									android:textFontWeight="400"
									android:textSize="15sp" />

							<EditText
									android:id="@+id/edtAddressName"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="3dp"
									android:background="@android:color/transparent"
									android:inputType="text"
									android:maxLines="1"
									android:text="My Wallet"
									android:textColor="@color/secondary_text_color"
									android:textSize="16sp" />

							<View
									android:id="@+id/line3"
									android:layout_width="match_parent"
									android:layout_height="1dp"
									android:layout_marginTop="3dp"
									android:background="@color/edt_divider" />

						</androidx.appcompat.widget.LinearLayoutCompat>

						<CheckBox
								android:id="@+id/check_box_add_address"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:backgroundTint="@color/send_fragment_card_view_bcg"
								android:button="@drawable/selector_check_box"
								android:checked="false"
								android:text="@string/send_token_add_address"
								android:textColor="@color/inactive_grey_txt"
								android:textFontWeight="550"
								android:textSize="15sp" />

						<TextView
								android:id="@+id/txtAddressDontExistWarning"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="@string/non_existent_adress_error"
								android:textColor="@color/red_mnemonic"
								android:textSize="16sp"
								android:visibility="gone" />

						<TextView
								android:id="@+id/txtAddressAlredyExistWarning"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/send_token_address_is_already_exist"
								android:textColor="@color/blue_secondary"
								android:textSize="16sp"
								android:visibility="gone" />


					</LinearLayout>


				</androidx.cardview.widget.CardView>


				<androidx.cardview.widget.CardView
						android:id="@+id/cardView2"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"
						app:cardCornerRadius="20dp"
						app:cardElevation="3dp"
						app:layout_constraintEnd_toStartOf="@+id/guideline16"
						app:layout_constraintStart_toStartOf="@+id/guideline15"
						app:layout_constraintTop_toBottomOf="@+id/cardView">

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:background="@color/send_fragment_card_view_bcg"
							android:orientation="vertical"
							android:paddingStart="15dp"
							android:paddingTop="15dp"
							android:paddingEnd="15dp"
							android:paddingBottom="25dp">

						<TextView
								android:id="@+id/txtEnterAmount"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/send_token_amount"
								android:textColor="@color/green"
								android:textFontWeight="400"
								android:textSize="15sp"
								android:visibility="invisible" />

						<RelativeLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content">

							<EditText
									android:id="@+id/edt_enter_amount"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_centerVertical="true"
									android:layout_marginTop="3dp"
									android:layout_marginRight="0dp"
									android:layout_toLeftOf="@+id/txtShortNetworkType"
									android:background="@android:color/transparent"
									android:hint="@string/send_token_amount"
									android:inputType="numberDecimal"
									android:maxLines="1"
									android:textColor="@color/secondary_text_color"
									android:textColorHint="@color/inactive_grey_txt"
									android:textSize="16sp" />

							<TextView
									android:id="@+id/txtShortNetworkType"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_alignParentEnd="true"
									android:layout_centerVertical="true"
									android:text="-"
									android:textColor="@color/txtShortNetworkType"
									android:textFontWeight="400"
									android:textSize="16sp" />

						</RelativeLayout>


						<View
								android:id="@+id/view2"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:layout_marginTop="5dp"
								android:background="@color/line_divider" />

						<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="5dp">

							<TextView
									android:id="@+id/txtAmountInUSD"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="⁓" />

							<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_alignParentEnd="true"
									android:text="USD" />

						</RelativeLayout>

						<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="5dp">

							<TextView
									android:id="@+id/txtAmountInGAD"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="⁓" />

							<TextView
									android:id="@+id/txtGAD"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_alignParentEnd="true"
									android:text="GAD" />

						</RelativeLayout>

						<TextView
								android:id="@+id/txtNotEnoughMoneyWarning"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="@string/send_token_insufficient_funds_error"
								android:textColor="@color/red_mnemonic"
								android:textSize="16sp"
								android:visibility="gone" />

					</LinearLayout>


				</androidx.cardview.widget.CardView>


				<androidx.cardview.widget.CardView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"
						app:cardCornerRadius="20dp"
						app:cardElevation="3dp"
						app:layout_constraintBottom_toTopOf="@+id/dummy_view"
						app:layout_constraintEnd_toStartOf="@+id/guideline16"
						app:layout_constraintStart_toStartOf="@+id/guideline15"
						app:layout_constraintTop_toBottomOf="@+id/cardView2">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@color/send_fragment_card_view_bcg"
							android:orientation="vertical"
							android:paddingStart="15dp"
							android:paddingTop="15dp"
							android:paddingEnd="15dp"
							android:paddingBottom="25dp">

						<TextView
								android:id="@+id/txtEnterCommission"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/send_token_commission_amount"
								android:textColor="@color/green"
								android:textFontWeight="400"
								android:textSize="15sp"
								android:visibility="invisible" />

						<RelativeLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content">

							<EditText
									android:id="@+id/edt_enter_commission"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_centerVertical="true"
									android:layout_marginTop="3dp"
									android:layout_toLeftOf="@+id/enter_commission_token"
									android:background="@android:color/transparent"
									android:hint="@string/send_token_commission_amount"
									android:inputType="numberDecimal"
									android:maxLines="1"
									android:text=""
									android:textColor="@color/secondary_text_color"
									android:textColorHint="@color/inactive_grey_txt"
									android:textSize="16sp" />

							<TextView
									android:id="@+id/enter_commission_token"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_alignParentEnd="true"
									android:layout_centerVertical="true"
									android:text="-"
									android:textColor="@color/enter_commission_token"
									android:textFontWeight="400"
									android:textSize="16sp" />


						</RelativeLayout>

						<View
								android:id="@+id/view3"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:layout_marginTop="5dp"
								android:background="@color/line_divider" />

						<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="5dp"
								android:orientation="horizontal">

							<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/send_token_commission_recommended"
									android:textFontWeight="400"
									android:textSize="14sp" />

							<TextView
									android:id="@+id/txtRecommendedCommission"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginStart="5dp"
									android:textColor="@color/green"
									android:visibility="invisible" />

						</LinearLayout>

					</LinearLayout>

				</androidx.cardview.widget.CardView>

				<View
						android:id="@+id/dummy_view"
						android:layout_width="0dp"
						android:layout_height="10dp"
						android:background="@android:color/transparent"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintEnd_toEndOf="@id/guideline16"
						app:layout_constraintStart_toStartOf="@id/guideline15" />



				<androidx.constraintlayout.widget.Guideline
						android:id="@+id/guideline15"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						app:layout_constraintGuide_percent="0.03" />

				<androidx.constraintlayout.widget.Guideline
						android:id="@+id/guideline16"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						app:layout_constraintGuide_percent="0.97" />

			</androidx.constraintlayout.widget.ConstraintLayout>

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="200dp"
					android:id="@+id/temp_linear"
					android:layout_below="@id/send_views_constraint"
					android:orientation="vertical"
					android:visibility="gone" />

		</RelativeLayout>



	</ScrollView>

	<View
			android:id="@+id/view"
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_marginTop="5dp"
			android:background="@color/line_divider"
			app:layout_constraintEnd_toStartOf="@+id/guideline9"
			app:layout_constraintStart_toStartOf="@+id/guideline11"
			app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

	<androidx.constraintlayout.widget.Guideline
			android:id="@+id/guideline49"
			android:layout_width="wrap_content"
